{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lnv-asbuiltdoc.github.io/LNV.AsBuiltDoc.Contracts/tech/Lenovo.DE/schemas/storage-containers.schema.v1.json",
  "title": "Lenovo.DE Storage Containers Dataset (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": ["schemaVersion", "items"],
  "properties": {
    "schemaVersion": { "type": "integer", "const": 1 },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "patternProperties": { "^x-": {} },
        "required": [
          "systemId",
          "id",
          "name",
          "containerType",
          "diskPool",
          "totalBytes",
          "usedBytes",
          "freeBytes",
          "state",
          "status"
        ],
        "properties": {
          "systemId": { "type": "string", "minLength": 1 },

          "id": { "type": "string", "minLength": 1 },
          "name": { "type": "string", "minLength": 1 },

          "containerType": { "type": "string", "enum": ["VolumeGroup","DiskPool"] },
          "diskPool": { "type": "boolean" },

          "raidLevel": { "type": ["string", "null"] },
          "driveMediaType": { "type": ["string", "null"] },
          "drivePhysicalType": { "type": ["string", "null"] },

          "state": { "type": ["string", "null"] },
          "status": { "type": ["string", "null"] },

          "totalBytes": { "type": "integer", "minimum": 0 },
          "usedBytes": { "type": "integer", "minimum": 0 },
          "freeBytes": { "type": "integer", "minimum": 0 },

          "securityType": { "type": ["string","null"] },
          "protectionType": { "type": ["string","null"] },

          "totalHuman": { "type": ["string", "null"] },
          "usedHuman": { "type": ["string", "null"] },
          "freeHuman": { "type": ["string", "null"] },

          "usedPct": { "type": ["number", "null"], "minimum": 0, "maximum": 100 },
          "freePct": { "type": ["number", "null"], "minimum": 0, "maximum": 100 },

          "containerRef": { "type": ["string", "null"] }
        }
      }
    }
  }
}