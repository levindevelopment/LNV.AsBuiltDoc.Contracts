{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "tech/Lenovo.DE/schemas/storage-containers.schema.v1.json",
  "title": "Lenovo.DE Storage Containers Dataset (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": ["schemaVersion", "items"],
  "properties": {
    "schemaVersion": { "type": "integer", "const": 1 },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "patternProperties": { "^x-": {} },
        "required": [
          "name",
          "containerType",
          "raidLevel",
          "driveMediaType",
          "totalBytes",
          "usedBytes",
          "freeBytes",
          "state",
          "status"
        ],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "containerType": { "type": "string" },

          "raidLevel": { "type": ["string", "null"] },
          "driveMediaType": {
            "type": ["string", "null"],
            "description": "e.g. ssd/hdd/mixed"
          },

          "totalBytes": { "type": "integer", "minimum": 0 },
          "usedBytes": { "type": "integer", "minimum": 0 },
          "freeBytes": { "type": "integer", "minimum": 0 },

          "totalHuman": { "type": ["string", "null"] },
          "usedHuman": { "type": ["string", "null"] },
          "freeHuman": { "type": ["string", "null"] },

          "usedPct": { "type": ["number", "null"], "minimum": 0, "maximum": 100 },
          "freePct": { "type": ["number", "null"], "minimum": 0, "maximum": 100 },

          "state": { "type": ["string", "null"] },
          "status": { "type": "string" },

          "containerRef": {
            "type": ["string", "null"],
            "description": "Blueprint/internal reference (may be omitted in SDT-facing views)."
          }
        }
      }
    }
  }
}
