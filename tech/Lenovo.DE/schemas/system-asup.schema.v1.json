{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lnv-asbuiltdoc.github.io/LNV.AsBuiltDoc.Contracts/tech/Lenovo.DE/schemas/system-asup.schema.v1.json",
  "title": "Lenovo.DE system ASUP dataset schema (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "items"
  ],
  "properties": {
    "schemaVersion": {
      "type": "integer",
      "const": 1
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "patternProperties": { "^x-": {} },
        "required": [
          "systemId",
          "asupCapable",
          "onDemandCapable",
          "asupEnabled",
          "onDemandEnabled",
          "remoteDiagsEnabled"
        ],
        "properties": {
          "systemId": { "type": "string", "minLength": 1 },

          "asupCapable": { "type": "boolean" },
          "onDemandCapable": { "type": "boolean" },
          "asupEnabled": { "type": "boolean" },
          "onDemandEnabled": { "type": "boolean" },
          "remoteDiagsEnabled": { "type": "boolean" },

          "deliveryMethod": { "type": ["string","null"] },
          "routingType": { "type": ["string","null"] },

          "proxyHost": { "type": ["string","null"] },
          "proxyPort": { "type": ["integer","null"], "minimum": 0 },
          "proxyScript": { "type": ["string","null"] },

          "mailRelayServer": { "type": ["string","null"] },
          "mailSenderAddress": { "type": ["string","null"] },

          "destinationAddressList": { "type": ["array","null"] },

          "maxSizeLimitHttps": { "type": ["integer","null"], "minimum": 0 },
          "maxSizeLimitSmtp": { "type": ["integer","null"], "minimum": 0 }
        }
      }
    }
  }
}
