{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lnv-asbuiltdoc.github.io/LNV.AsBuiltDoc.Contracts/tech/Lenovo.DE/schemas/trays.schema.v1.json",
  "title": "Lenovo.DE Trays Dataset (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": ["schemaVersion", "items"],
  "properties": {
    "schemaVersion": { "type": "integer", "const": 1 },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "patternProperties": { "^x-": {} },
        "required": ["systemId", "trayId", "trayType", "trayRole", "status"],
        "properties": {
          "systemId": { "type": "string", "minLength": 1 },
          "trayId": { "type": ["integer", "null"], "minimum": 0 },

          "trayType": {
            "type": ["string", "null"],
            "description": "Hardware-reported tray type (e.g. de224c)."
          },

          "trayRole": {
            "type": ["string", "null"],
            "enum": ["controller-tray", "expansion-tray", null]
          },

          "controllerModelName": {
            "type": ["string", "null"],
            "description": "Controller/system model name (e.g. DE4200) surfaced for SDT-friendly display."
          },

          "status": { "type": ["string", "null"] },
          "serialNumber": { "type": ["string", "null"] },
          "partNumber": { "type": ["string", "null"] },
          "vendorName": { "type": ["string", "null"] },
          "manufacturer": { "type": ["string", "null"] },
          "manufacturerDate": { "type": ["string", "integer", "null"] },

          "numControllerSlots": { "type": ["integer", "null"], "minimum": 0 },
          "numDriveSlots": { "type": ["integer", "null"], "minimum": 0 },

          "driveTechnologies": { "type": ["array", "null"], "items": { "type": "string" } },

          "hasConfigurableTrayId": { "type": ["boolean", "null"] },
          "hasTrayIdentityIndicator": { "type": ["boolean", "null"] }
        }
      }
    }
  }
}
