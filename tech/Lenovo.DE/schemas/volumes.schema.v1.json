{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lnv-asbuiltdoc.github.io/LNV.AsBuiltDoc.Contracts/tech/Lenovo.DE/schemas/volumes.schema.v1.json",
  "title": "Lenovo.DE Volumes Dataset (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": ["schemaVersion", "items"],
  "properties": {
    "schemaVersion": { "type": "integer", "const": 1 },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "patternProperties": { "^x-": {} },
        "required": ["systemId", "name", "sizeBytes", "status"],
        "properties": {
          "systemId": { "type": "string", "minLength": 1 },

          "id": { "type": ["string","null"] },

          "name": { "type": "string", "minLength": 1 },

          "sizeBytes": { "type": "integer", "minimum": 0 },
          "sizeHuman": { "type": ["string", "null"] },

          "status": { "type": ["string","null"] },
          "raidLevel": { "type": ["string", "null"] },

          "containerName": { "type": ["string", "null"] },
          "containerRef": { "type": ["string", "null"] },

          "volumeRef": { "type": ["string", "null"] },

          "volumeGroupRef": { "type": ["string","null"] },
          "diskPoolRef": { "type": ["string","null"] },

          "segmentSize": { "type": ["integer","null"], "minimum": 0 },

          "wwn": { "type": ["string","null"] },
          "worldWideName": { "type": ["string","null"] },

          "preferredControllerId": { "type": ["string","null"] },
          "currentControllerId": { "type": ["string","null"] },

          "readCacheEnabled": { "type": ["boolean","null"] },
          "writeCacheEnabled": { "type": ["boolean","null"] },

          "createdBy": { "type": ["string","null"] },
          "createdUtc": { "type": ["string","null"] }
        }
      }
    }
  }
}