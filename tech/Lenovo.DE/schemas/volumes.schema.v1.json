{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "tech/Lenovo.DE/schemas/volumes.schema.v1.json",
  "title": "Lenovo.DE Volumes Dataset (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": ["schemaVersion", "items"],
  "properties": {
    "schemaVersion": { "type": "integer", "const": 1 },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "patternProperties": { "^x-": {} },
        "required": ["systemId", "name", "sizeBytes", "status", "containerName"],
        "properties": {
          "systemId": { "type": "string", "minLength": 1 },
          "name": { "type": "string", "minLength": 1 },

          "sizeBytes": { "type": "integer", "minimum": 0 },
          "sizeHuman": { "type": ["string", "null"] },

          "status": { "type": "string" },
          "raidLevel": { "type": ["string", "null"] },

          "containerName": { "type": ["string", "null"] },

          "containerRef": { "type": ["string", "null"] },
          "volumeRef": { "type": ["string", "null"] }
        }
      }
    }
  }
}
