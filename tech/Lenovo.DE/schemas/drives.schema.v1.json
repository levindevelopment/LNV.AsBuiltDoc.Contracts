{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lnv-asbuiltdoc.github.io/LNV.AsBuiltDoc.Contracts/tech/Lenovo.DE/schemas/drives.schema.v1.json",
  "title": "Lenovo.DE Drives Dataset (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": ["schemaVersion", "items"],
  "properties": {
    "schemaVersion": { "type": "integer", "const": 1 },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "patternProperties": { "^x-": {} },
        "required": ["driveRef", "status", "rawCapacityBytes", "usableCapacityBytes", "trayRef", "slot"],
        "properties": {
          "driveRef": { "type": "string", "minLength": 1 },
          "id": { "type": ["string", "null"] },

          "serialNumber": { "type": ["string", "null"] },
          "worldWideName": { "type": ["string", "null"] },

          "manufacturer": { "type": ["string", "null"] },
          "productID": { "type": ["string", "null"] },

          "driveMediaType": { "type": ["string", "null"], "description": "e.g. hdd|ssd" },
          "phyDriveType": { "type": ["string", "null"], "description": "e.g. sas" },
          "interfaceDriveType": { "type": ["string", "null"], "description": "e.g. sas" },

          "status": { "type": "string", "minLength": 1 },

          "pfa": { "type": ["boolean", "null"] },
          "pfaReason": { "type": ["string", "null"] },
          "offline": { "type": ["boolean", "null"] },
          "removed": { "type": ["boolean", "null"] },
          "hotSpare": { "type": ["boolean", "null"] },

          "rawCapacityBytes": { "type": "integer", "minimum": 0 },
          "usableCapacityBytes": { "type": "integer", "minimum": 0 },

          "firmwareVersion": { "type": ["string", "null"] },

          "trayRef": { "type": ["string", "null"] },
          "slot": { "type": "integer", "minimum": 0 },
          "label": { "type": ["string", "null"] },

          "driveTemperatureC": { "type": ["integer", "null"] },
          "ssdWearLifePercent": { "type": ["integer", "null"] },

          "currentVolumeGroupRef": { "type": ["string", "null"] }
        }
      }
    }
  }
}
