{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lnv-asbuiltdoc.github.io/LNV.AsBuiltDoc.Contracts/tech/Lenovo.DE/schemas/management-interfaces.schema.v1.json",
  "title": "Lenovo.DE Management Interfaces Dataset (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": ["schemaVersion", "items"],
  "properties": {
    "schemaVersion": { "type": "integer", "const": 1 },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "patternProperties": { "^x-": {} },
        "required": [
          "systemId",
          "controllerRef",
          "controllerLabel",
          "controllerSlot",
          "portLabel",
          "interfaceName",
          "interfaceRef",
          "linkStatus",
          "macAddress",
          "currentSpeed",
          "ipv4Address",
          "ipv4SubnetMask",
          "ipv4GatewayAddress"
        ],
        "properties": {
          "systemId": { "type": "string", "minLength": 1 },
          "controllerRef": { "type": "string", "minLength": 1 },
          "controllerLabel": {
            "type": ["string", "null"],
            "description": "Typically 'A' or 'B'."
          },
          "controllerSlot": { "type": ["integer", "null"] },

          "portLabel": {
            "type": ["string", "null"],
            "description": "Physical label (e.g. P1)."
          },
          "portSlot": { "type": ["integer", "null"] },

          "interfaceName": {
            "type": ["string", "null"],
            "description": "OS/interface name (e.g. wan0)."
          },
          "interfaceRef": {
            "type": ["string", "null"],
            "description": "SANtricity interfaceRef/id."
          },

          "linkStatus": { "type": ["string", "null"] },
          "macAddress": { "type": ["string", "null"] },
          "currentSpeed": { "type": ["string", "null"] },

          "ipv4Address": { "type": ["string", "null"] },
          "ipv4SubnetMask": { "type": ["string", "null"] },
          "ipv4GatewayAddress": { "type": ["string", "null"] },

          "type": {
            "type": ["string", "null"],
            "description": "Optional interface type if exposed by source."
          }
        }
      }
    }
  }
}
